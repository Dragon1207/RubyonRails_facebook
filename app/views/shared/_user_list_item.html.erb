<li>
  <%= user.name %>
  <% case type %>
  <% when :send %>
    <%= render 'shared/send_request_button', user: user %>
  <% when :accept %>
    <%= render 'shared/accept_request_button', request: request %>
  <% when :revoke %>
    <%= render 'shared/revoke_request_button', request: request %>
  <% end %>
</li>
